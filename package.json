{
  "name": "vue-gradient-slider",
  "version": "0.0.2",
  "main": "dist/vue-gradient-picker.umd.min.js",
  "scripts": {
    "serve": "cd demo && npm run serve",
    "build:bundle": "vue-cli-service build --target lib --name vue-gradient-picker ./src/index.js",
    "build:demo": "cd demo && npm install && npm run build",
    "lint": "vue-cli-service lint",
    "version": "npm run build:bundle && npm publish",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
